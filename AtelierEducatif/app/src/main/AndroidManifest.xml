<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ateliereducatif">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@raw/ic_boy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AtelierEducatif"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".controller.TerreActivity"
            android:exported="false"
            android:parentActivityName=".controller.MenuActivity"
          />
        <activity
            android:name=".controller.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".controller.ConnexionActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
