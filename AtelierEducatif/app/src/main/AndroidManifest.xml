<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.ateliereducatif">

  <uses-permission android:name="android.permission.INTERNET" />

  <queries>
    <intent>
      <action android:name="com.google.android.youtube.api.service.START" />
    </intent>
  </queries>

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_boy"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AtelierEducatif">
    <activity
      android:name=".controller.TableActivity"
      android:exported="false" />
    <activity
      android:name=".controller.AlphabetActivity"
      android:exported="false" />
    <activity
      android:name=".controller.ListeAnimauxActivity"
      android:exported="false" />
    <activity
      android:name=".controller.ListeRecitationActivity"
      android:exported="false" />
    <activity
      android:name=".controller.RecitationActivity"
      android:exported="false" />
    <activity
      android:name=".controller.TerreActivity"
      android:exported="false"
      android:parentActivityName=".controller.MenuActivity" />
    <activity
      android:name=".controller.MenuActivity"
      android:exported="false" />
    <activity
      android:name=".controller.ConnexionActivity"
      android:exported="false" />
    <activity
      android:name=".controller.SettingsActivity"
      android:exported="false" />
    <activity
      android:name=".controller.MainActivity"
      android:exported="true"
      android:theme="@style/SplashScreenTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>
