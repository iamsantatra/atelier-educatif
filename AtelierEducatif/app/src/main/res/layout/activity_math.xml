<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:backgroundTint="#9E1E1E"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.MathActivity"
  android:orientation="vertical" >

  <TextView
    android:id="@+id/questionMath"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="120dp"
    android:text="2 + 2 = ?"
    android:textColor="#080403"
    android:textSize="73dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:gravity="center">


      <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:backgroundTint="#ee1726"
        android:text="1"
        android:textSize="52dp"
        app:cornerRadius="10dp"
        />

      <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#cdfdff"
        android:text="2"
        android:textColor="#035b66"
        android:textSize="52dp"
        app:cornerRadius="10dp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
      android:id="@+id/button3"
      android:layout_width="180dp"
      android:layout_height="110dp"
      app:cornerRadius="10dp"
      android:backgroundTint="#cdfdff"
      android:text="3"
      android:textColor="#035b66"
      android:textSize="52dp"  />

    <Button
      android:id="@+id/button4"
      android:layout_width="180dp"
      android:layout_height="110dp"
      android:backgroundTint="#16f10e"
      android:layout_marginStart="16dp"
      android:textColor="#035b66"
      android:text="4"
      app:cornerRadius="10dp"
      android:textSize="52dp" />

  </LinearLayout>

</LinearLayout>
